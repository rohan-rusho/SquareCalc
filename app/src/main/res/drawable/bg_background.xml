<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base Layer: Deep purple to vibrant magenta gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#3C1A5B"
                android:endColor="#F72585"/>
        </shape>
    </item>

    <!-- Soft gold glow at the top -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="700dp"
                android:centerX="50%"
                android:centerY="0%"
                android:startColor="#FFD70033"
                android:endColor="#00000000"/>
        </shape>
    </item>

    <!-- Subtle vignette around edges for depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="1100dp"
                android:centerX="50%"
                android:centerY="50%"
                android:startColor="#00000000"
                android:endColor="#3C1A5B66"/>
        </shape>
    </item>

    <!-- Bottom shadow for depth -->
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#66000000"
                android:endColor="#00000000"/>
        </shape>
    </item>

</layer-list>